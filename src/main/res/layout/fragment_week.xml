<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- 周导航栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:background="#f5f5f5">

        <Button
            android:id="@+id/btnPrevWeek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="‹" />

        <TextView
            android:id="@+id/tvCurrentWeek"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="2025年 第45周"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnNextWeek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="›" />

    </LinearLayout>

    <!-- 星期标题 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#e0e0e0">

        <!-- 时间列占位 -->
        <TextView
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="时间"
            android:textStyle="bold" />

        <!-- 日期标题 -->
        <GridView
            android:id="@+id/gridWeekHeader"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:numColumns="7"
            android:gravity="center" />

    </LinearLayout>

    <!-- 主要内容区域 - 使用 ScrollView 嵌套 HorizontalScrollView -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:scrollbars="vertical">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:scrollbars="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- 时间列 - 使用 LinearLayout 替代 GridView -->
                <LinearLayout
                    android:id="@+id/layoutTimeSlots"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#f8f8f8" />

                <!-- 日程网格 - 使用 TableLayout 替代 GridView -->
                <TableLayout
                    android:id="@+id/tableWeekDays"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:stretchColumns="*"
                    android:shrinkColumns="*" />

            </LinearLayout>

        </HorizontalScrollView>

    </ScrollView>

</LinearLayout>